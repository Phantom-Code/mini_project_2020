<% include partials/header %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="progress progress-bar progress-bar-striped progress-bar-animated mb-2">Loading</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Register</h1>
                    <form method="POST" action="/register2" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Full name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter your name">
                        </div>

                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="image"
                                    accept="image/x-png,image/jpeg" id="img-in"/>
                                <label for="file" class="custom-file-label">Choose File</label>
                            </div>
                        </div>
                        <button type ="submit" class="btn btn-primary btn-block">Upload</button>
                    </form>
                    <img id="img-disp" src="" alt="image not found" class="img-fluid mt-4">
                </div>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript" src="/javascripts/image-before-upload.js"></script>
<% include partials/footer %>